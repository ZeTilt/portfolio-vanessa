# Production environment configuration for portfolio.cameleonne.fr
APP_ENV=prod
APP_DEBUG=false

# Generate a new secret key for production
APP_SECRET=change_this_to_a_random_32_character_string_for_production

# Mailer configuration for O2Switch
# O2Switch typically uses standard SMTP configuration
MAILER_DSN=smtp://localhost:587?encryption=tls&auth_mode=login

# Database configuration (not needed for now but ready for future use)
# DATABASE_URL="mysql://username:password@localhost:3306/database_name?serverVersion=8.0.32&charset=utf8mb4"

# Messenger configuration
MESSENGER_TRANSPORT_DSN=doctrine://default?auto_setup=0